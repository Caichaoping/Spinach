<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_cyan_500"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:minHeight="200dp"
    android:orientation="vertical"
    android:padding="5dp">


    <ImageView
        android:id="@+id/header_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:layout_toEndOf="@id/header_icon"
        android:layout_toRightOf="@id/header_icon"
        android:clickable="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/login"
        android:textColor="@color/material_cyan_50"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/header_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_name"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/header_icon"
        android:layout_toRightOf="@id/header_icon"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="@string/about_content"
        android:textColor="@color/material_cyan_200"
        android:textSize="15sp" />

</RelativeLayout>